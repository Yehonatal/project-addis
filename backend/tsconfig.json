{
    "compilerOptions": {
        "target": "ES2020",
        "module": "nodenext",
        "rootDir": "src",
        "outDir": "dist",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true,
        "moduleResolution": "nodenext"
    },
    "include": ["src/**/*", "src/types"],
    "exclude": ["node_modules", "dist"]
}
